<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Attendance</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>raiz</servlet-name>
    <servlet-class>com.laetienda.attendance.servlets.Attendance</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>raiz</servlet-name>
    <url-pattern></url-pattern>
    <url-pattern>/home</url-pattern>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/password</url-pattern>
    <url-pattern>/email_server</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>event</servlet-name>
    <servlet-class>com.laetienda.attendance.servlets.Evento</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>event</servlet-name>
    <url-pattern>/event/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>guest</servlet-name>
    <servlet-class>com.laetienda.attendance.servlets.Persona</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>guest</servlet-name>
    <url-pattern>/guest/*</url-pattern>
  </servlet-mapping>
   <servlet>
  	<servlet-name>correo</servlet-name>
    <servlet-class>com.laetienda.attendance.servlets.Correo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>correo</servlet-name>
    <url-pattern>/email/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>confirm</servlet-name>
    <servlet-class>com.laetienda.attendance.servlets.Confirmation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>confirm</servlet-name>
    <url-pattern>/confirm/*</url-pattern>
  </servlet-mapping>
 
  <listener>
    <listener-class>
  		com.laetienda.attendance.listeners.LoadUtilities
  	</listener-class>
  </listener>
  <filter>
    <filter-name>WebSite</filter-name>
    <filter-class>com.laetienda.attendance.filters.WebPage</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>WebSite</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>persistence-unit-name</param-name>
    <param-value>Attendance</param-value>
  </context-param>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/view/web/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/view/web/login_error.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Organizer</web-resource-name>
      <description>Blocked for everybody. User must login first</description>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>organizer</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Confirmation</web-resource-name>
      <description>Not blocked, required for guests to confirm their presence</description>
      <url-pattern>/confirm/*</url-pattern>
    </web-resource-collection>
  </security-constraint>
</web-app>